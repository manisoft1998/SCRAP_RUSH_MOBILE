<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_address_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/square_red_bg"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_near_me_24" />

        <TextView
            android:id="@+id/tv_address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/iv_address_icon"
            android:fontFamily="@font/roboto_regular"
            android:text="Watermelon"
            android:textColor="@color/black_font"
            android:textSize="@dimen/subtitle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/iv_address_icon"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="3"
            android:textAlignment="textStart"
            android:textColor="@color/light_font"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_menu_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:visibility="visible" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>