<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_scrap"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_margin="2dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_scrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/img_placeholder" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_delete_outline_24"
            app:tint="@color/red_font"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/iv_delete"
            android:layout_toEndOf="@id/cv_scrap"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_scrap_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:text="Plastic"
                android:textColor="@color/primary"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tamil_scrap_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:text="Plastic"
                android:textColor="@color/primary"
                android:textSize="@dimen/body" />

            <TextView
                android:id="@+id/tv_scrap_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:singleLine="true"
                android:text="Qty : 1Kg"
                android:textColor="@color/primary"
                android:textSize="@dimen/body" />

            <TextView
                android:id="@+id/tv_scrap_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:singleLine="true"
                android:text="100"
                android:textColor="@color/primary"
                android:textSize="@dimen/body" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

