<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <xyz.schwaab.avvylib.AvatarView
        android:id="@+id/progress_view"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_margin="10dp"
        android:src="@drawable/app_logo"
        app:avvy_border_color="@color/green_font"
        app:avvy_border_highlight_color="@color/primary"
        app:avvy_border_highlight_color_end="@color/green_font"
        app:avvy_border_thickness="10dp"
        app:avvy_border_thickness_highlight="5dp"
        app:avvy_distance_to_border="5dp"
        app:avvy_highlighted="true"
        app:avvy_loading_arches="7"
        app:avvy_loading_arches_degree_area="90" />

</LinearLayout>
